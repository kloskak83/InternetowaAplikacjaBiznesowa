@model BazaDanych.Data.CMS.SlSegmentPojazdu

@{
    ViewData["Title"] = "Delete";
}

<h2>Usuwasz segment pojazdu:</h2>


<div>
    <hr />
    <dl class="row">
        <div class="input-group">
            <label asp-for="NazwaSegmentuPojazdu" class="input-group-text">
                <i class="material-icons-round align-middle m-1 "></i>
                Nazwa segmentu pojazdu:
            </label>
            <input asp-for="NazwaSegmentuPojazdu" readonly class="form-control validate">
        </div>
        <h4 class="m-2">Czy jesteś pewien że chcesz usunąć?</h4>
        <form asp-action="Delete" class="form-group p-2">
            <a asp-action="Index" class="btn btn-primary">Powrót</a>
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Usuwanie" class="btn btn-danger" />

        </form>
</div>
