@model BazaDanych.Data.CMS.Aktualnosc

@{
    ViewData["Title"] = "Edit";
}


<h1>Aktualności</h1>

<div>
    <h4>Szczegóły</h4>
    <hr />
    <div class="container">
        <div class="row">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AktualnosciId" />
                <div class="col-12 p-2">
                    <div class="input-group">
                        <label class="input-group-text">
                            <i class="material-icons-round align-middle pe-2">label</i>
                            @Html.DisplayNameFor(model => model.Naglowek) </label>
                        <input asp-for="Naglowek" class="form-control" />
                        <span asp-validation-for="Naglowek" class="text-danger"></span>
                    </div>                   
                </div>
                <div class="col-12 p-2">
                    <div class="input-group">
                        <label class="input-group-text">
                            <i class="material-icons-round palette-accent-text-color align-middle pe-2">event</i>
                            @Html.DisplayNameFor(model => model.DataAktualnosci):
                        </label>
                        <input asp-for="DataAktualnosci" class="form-control" type="date" />
                        <span asp-validation-for="DataAktualnosci" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 p-2">
                    <label class="form-label">
                        <i class="material-icons-round palette-accent-text-color align-middle">notes</i>
                        @Html.DisplayNameFor(model => model.Opis)
                    </label>
                    <textarea asp-for="Opis" class="form-control"></textarea>
                    <span asp-validation-for="Opis" class="text-danger"></span>
                </div>

                <div class="col-12 p-2">
                    <div class="input-group">
                        <label class="input-group-text">
                            <i class="material-icons-round  align-middle  pe-2">add_photo_alternate</i>
                        </label>
                        <input asp-for="Zdjecie" class="form-control" id="formFile"
                               type="file" data-val="false"                               
                               data-val-required="The Zdjęcie field is required." name="Zdjecie">
                        <span asp-validation-for="Zdjecie" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <a asp-action="Index" class="btn btn-primary">Powrót</a>
                    <input type="submit" value="Zapisz" class="btn btn-primary" />                   
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
