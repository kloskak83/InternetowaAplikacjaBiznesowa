@model IEnumerable<BazaDanych.Data.CMS.Aktualnosc>

@{
    ViewData["Title"] = "Index";
}

<h2>Lista aktualności</h2>

<table class="table table-dark table-striped table-hover table-bordered table-sm align-middle">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.DataAktualnosci)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Naglowek)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opis)
            </th>
            <th>
                Zdjęcie
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td><span class="m-2">@Html.DisplayFor(modelItem => item.DataAktualnosci)</span></td>
                <td><span class="m-2 d-inline-block text-truncate" style="max-width: 200px;">@Html.DisplayFor(modelItem => item.Naglowek)</span></td>
                <td><span class="m-2 d-inline-block text-truncate" style="max-width: 400px;">@Html.DisplayFor(modelItem => item.Opis)</span></td>
                <td>
                    <span class="m-2 ">

                        <img src="http://localhost/zdjeciaProjekt/artykuly/@Html.DisplayFor(modelItem => item.SciezkaDoZdjecia)" style="max-width: 200px;" class="img-thumbnail p-md-2" alt="zdjecie">
                    </span></td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.AktualnosciId "><span class="m-2"><i class="fa-regular fa-eye fa-flip-horizontal fa-xl" style="color: #539dfd;"></i></span></a>
                    <a asp-action="Edit" asp-route-id="@item.AktualnosciId"><span class="m-2"><i class="fa-solid fa-wrench fa-xl" style="color: #539dfd;"></i></span></a>
                    <a asp-action="Delete" asp-route-id="@item.AktualnosciId"><span class="m-2"><i class="fa-solid fa-trash fa-flip-horizontal fa-xl" style="color: #539dfd;"></i></span></a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-action="Create" class="link-underline-opacity-0"><span class="btn btn-primary m-2"><i class="fa-solid fa-circle-plus fa-2xl m-2 p-2" style="color:whitesmoke; "></i>Dodaj nowe</span></a>

</p>
