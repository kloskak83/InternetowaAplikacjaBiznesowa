@model BazaDanych.Data.Portal.StronaNaSztywno

@{
    ViewData["Title"] = "Edit";
}

<h2>Edycja</h2>

<h4>Edycja strony</h4>

<div class="container">
    <div class="row col-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="col-12 p-2">
                <div class="input-group">
                    <label class="input-group-text">
                        <i class="material-icons-round align-middle pe-2">label</i>
                        @Html.DisplayNameFor(model => model.LinkTytul)
                    </label>
                    <input asp-for="LinkTytul" class="form-control" />
                    <span asp-validation-for="LinkTytul" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 p-2">
                <label class="form-label">
                    <i class="material-icons-round palette-accent-text-color align-middle">notes</i>
                    @Html.DisplayNameFor(model => model.Tresc)
                </label>
                <textarea asp-for="Tresc" class="form-control"></textarea>
                <span asp-validation-for="Tresc" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary">Powrót</a>
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
