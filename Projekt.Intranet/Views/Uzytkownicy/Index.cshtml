@model IEnumerable<BazaDanych.Data.CMS.Uzytkownicy.Uzytkownik>

@{
    ViewData["Title"] = "Index";
}

<h2>Lista użytkowników</h2>


<table class="table table-dark table-striped table-hover table-bordered table-sm align-middle">
    <tbody>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Imie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nazwisko)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.TelefonKontaktowy)
            </th>           
            <th>
                @Html.DisplayNameFor(model => model.SlTypUzytkownika)
            </th>
            <th>Edycja</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    <span class="m-2">
                @Html.DisplayFor(modelItem => item.Imie)
                </span>
            </td>
                <td>
                    <span class="m-2">
                @Html.DisplayFor(modelItem => item.Nazwisko)
                </span>
            </td>
                <td>
                    <span class="m-2">
                @Html.DisplayFor(modelItem => item.Email)
                    </span>
            </td>           
                <td>
                    <span class="m-2">
                @Html.DisplayFor(modelItem => item.TelefonKontaktowy)
                    </span>
            </td>           
                <td>
                    <span class="m-2">
                @Html.DisplayFor(modelItem => item.SlTypUzytkownika.NazwaUprawnienia)
                </span>
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.Id"><span class="m-2"><i class="fa-regular fa-eye fa-flip-horizontal fa-xl" style="color: #539dfd;"></i></span></a>
                    <a asp-action="Edit" asp-route-id="@item.Id"><span class="m-2"><i class="fa-solid fa-wrench fa-xl" style="color: #539dfd;"></i></span></a>
                    <a asp-action="Delete" asp-route-id="@item.Id"><span class="m-2"><i class="fa-solid fa-trash fa-flip-horizontal fa-xl" style="color: #539dfd;"></i></span></a>
            </td>
        </tr>
}
    </tbody>
</table>

<p>
    <a asp-action="Create" class="link-underline-opacity-0"><span class="btn btn-primary m-2"><i class="fa-solid fa-circle-plus fa-2xl m-2 p-2" style="color:whitesmoke; "></i>Dodaj nowy</span></a>

</p>

