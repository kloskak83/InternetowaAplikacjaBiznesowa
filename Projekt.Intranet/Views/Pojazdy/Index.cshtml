@model IEnumerable<BazaDanych.Data.CMS.Pojazd>

@{
    ViewData["Title"] = "Index";
}

<h1>Edycja pojazdów</h1>


<table class="table table-dark table-striped table-hover table-bordered table-sm align-middle">
    <tbody>
    <thead>
        <tr>
            <th>
                    @Html.DisplayNameFor(model => model.SlMarka)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.NazwaWSerwisie)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.SlTypSilnika)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.SlTypSkrzyniBiegow)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.SlSegmentPojazdu)
            </th>
            
            <th>
                    @Html.DisplayNameFor(model => model.DataProdukcji)
            </th>
            <th>
                   Edycja
            </th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td><span class="m-2">@Html.DisplayFor(modelItem => item.SlMarka.MarkaPojazdu)</span></td>
                <td><span class="m-2">@Html.DisplayFor(modelItem => item.Model)</span></td>
                <td><span class="m-2">@Html.DisplayFor(modelItem => item.NazwaWSerwisie)</span></td>
                <td><span class="m-2">@Html.DisplayFor(modelItem => item.SlTypSilnika.NazwaTypuSilnika)</span></td>
                <td><span class="m-2">@Html.DisplayFor(modelItem => item.SlTypSkrzyniBiegow.NazwaTypuSkrzyniBiegow)</span></td>
                <td><span class="m-2">@Html.DisplayFor(modelItem => item.SlSegmentPojazdu.NazwaSegmentuPojazdu)</span></td>
             
                <td><span class="m-2">@Html.DisplayFor(modelItem => item.DataProdukcji)</span></td>
                
                <td>
                    <a asp-action="Details" asp-route-id="@item.IdPojazd"><span class="m-2"><i class="fa-regular fa-eye fa-flip-horizontal fa-xl" style="color: #539dfd;"></i></span></a>
                    <a asp-action="Edit" asp-route-id="@item.IdPojazd"><span class="m-2"><i class="fa-solid fa-wrench fa-xl" style="color: #539dfd;"></i></span></a>

                    <a asp-action="Delete" asp-route-id="@item.IdPojazd"><span class="m-2"><i class="fa-solid fa-trash fa-flip-horizontal fa-xl" style="color: #539dfd;"></i></span></a>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create" class="link-underline-opacity-0"><span class="btn btn-primary m-2"><i class="fa-solid fa-circle-plus fa-2xl m-2 p-2" style="color:whitesmoke; "></i>Dodaj nowy</span></a>

</p>






